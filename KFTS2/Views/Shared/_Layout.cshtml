<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="~/js/script.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdn.canvasjs.com/canvasjs.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>

    <link rel="shortcut icon" href="favicon.png" type="image/x-icon">
    <title>KFTS - @ViewData["Header"]</title>
</head>
<body class="montserrat-font">
    <div class="container-fluid d-flex pe-0 me-0 ms-0">

        <!-- soldaki nav -->
        <div class="container-fluid col-sm-2 bg-white border-end d-flex pt-2 ps-0 ms-0 pb-3 me-0 sticky-top"
             style="justify-content: space-between; flex-direction: column; z-index: 999; height: 100vh;">
            <div class="container-fluid">
                <div class="logo col-sm-2 d-flex w-100" style="justify-content: center;">
                    <a class="navbar-brand" href="#">
                        <img src="~/Logo.jpg" alt="Avatar Logo" class="rounded-pill logo">
                    </a>
                </div>
                <nav class="navbar navbar-expand-sm bg-white navbar-light w-100 mt-5">
                    <div class="container-fluid ps-0">
                        <ul class="nav flex-column" style="color: #0057A3; font-weight: 600;">
                            <li class="nav-item linkler">
                                <a class="nav-link linkler" href="/Home/AnalizPaneli">
                                    <i class="bi bi-pie-chart-fill me-2" style="font-size: 20px;"></i> Analiz Paneli
                                </a>
                            </li>
                            <li class="nav-item linkler">
                                <a class="nav-link mt-2 linkler" href="/Home/GelirGiderBildirme">
                                    <i class="bi bi-bank2 me-2" style="font-size: 20px;"></i> Gelir/Gider Bildirme
                                </a>
                            </li>
                            <li class="nav-item linkler">
                                <a class="nav-link mt-2 linkler" href="/Home/Varliklarim">
                                    <i class="bi bi-houses-fill me-2" style="font-size: 20px;"></i> Varlıklarım
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="container-fluid">
                <ul class="nav flex-column" style=" font-weight: 600;">
                    <li class="nav-item">
                        <a class="nav-link linkler" href="#">
                            <i class="bi bi-person-fill-lock me-2" style="font-size: 20px;"></i> Yönetici Paneli
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- ana kısım -->
        <div class="container-fluid col-sm-10 ps-0 ms-0 me-0 pe-0">
            <!--header--><div class=" container-fluid bg-white border-bottom d-flex h-auto sticky-top"
                              style="z-index: 99999; height: 100px;">

                <div class="container-fluid d-flex" style="justify-content: space-between; align-items: center;">
                    <h3 class="mb-0 ps-4" style="color: #0057A3;">Kişisel Finans Takip Sistemi - @ViewData["Header"]</h3>
                    <nav class="navbar navbar-expand-sm bg-white navbar-light col-sm-6">
                        <div class="container-fluid" style="justify-content: flex-end;">
                            <ul class="navbar-nav" style="align-items: center;">
                                <li class="nav-item drop">
                                    <a class="nav-link active" href="/Home/Profil">
                                        <i class="bi bi-person-circle linkler" style="font-size: 32px;"></i>
                                        <i class="fa-regular fa-circle-user"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div> <!--header son-->

            <div class="container-fluid p-5">
                @RenderBody()
            </div>
        </div>
    </div>

</body>
</html>
