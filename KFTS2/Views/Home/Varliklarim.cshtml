@{
    ViewData["Header"] = "Varlıklarım";
}

<div class="container-fluid d-flex w-75" style="justify-content: space-between;">
    <!--EKLE-->
    <form>
        <h4>Ekle</h4>
        <div class="mb-3">
            <label for="ekleAd" class="form-label">İsim*</label>
            <input type="text" class="form-control" id="ekleAd" required>
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Tür*</label>
            <select class="form-select" aria-label="Default select example" id="ekleTür" required>
                <option selected>Tür Seçiniz</option>
                <option value="1">Arsa</option>
                <option value="2">Taşıt</option>
                <option value="3">Ev</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Fiyat*</label>
            <input type="number" class="form-control" id="ekleFiyat" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Açıklama*</label>
            <textarea class="form-control" id="ekleAciklama" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-50" id="btnEkle">Ekle</button>
    </form>
    <!--SİL-->
    <form>
        <h4>Sil</h4>
        <div class="mb-3">
            <label class="form-label">Silmek İstediğiniz Varlığı Seçiniz</label>
            <select class="form-select" aria-label="Default select example" id="silVarlik" required>
                <option selected>Varlık Seçiniz</option>
                <option value="1">Arsa 1</option>
                <option value="2">Araba 1</option>
                <option value="3">Ev 1</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary w-50" id="btnSil">Sil</button>
    </form>
    <!--GÜNCELLE-->
    <form>
        <h4>Güncelle</h4>
        <div class="mb-3">
            <label class="form-label">Güncellemek İstediğiniz Varlığı Seçiniz</label>
            <select class="form-select" aria-label="Default select example" id="guncelleVarlik" required>
                <option selected>Varlık Seçiniz</option>
                <option value="1">Arsa 1</option>
                <option value="2">Araba 1</option>
                <option value="3">Ev 1</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">İsim</label>
            <input type="text" class="form-control" id="guncelleAd" required disabled>
        </div>
        <div class="mb-3">
            <label class="form-label">Tür</label>
            <select class="form-select" aria-label="Default select example" id="guncelleTur" required disabled>
                <option selected>Tür Seçiniz</option>
                <option value="1">Arsa</option>
                <option value="2">Taşıt</option>
                <option value="3">Ev</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Fiyat</label>
            <input type="number" class="form-control" id="guncelleFiyat" required disabled>
        </div>
        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <textarea class="form-control" id="guncelleAciklama" rows="3" required disabled></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-50" id="btnGuncelle" disabled>Güncelle</button>
    </form>
</div>

