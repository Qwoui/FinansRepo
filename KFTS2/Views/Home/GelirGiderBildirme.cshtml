@{
    ViewData["Header"] = "Gelir/Gider Bildirme";
}

<div class="d-flex">
    <!--GELİR-->
    <div class="container-fluid w-50 col-sm-6" style="justify-content: space-between;">
        <form class="w-25">
            <h4>Gelir Ekle</h4>
            <div class="mb-3">
                <label for="" class="form-label">Tür*</label>
                <select class="form-select" aria-label="Default select example" id="gelirTur" required>
                    <option selected>Tür Seçiniz</option>
                    <option value="1">Maaş</option>
                    <option value="2">Kira</option>
                    <option value="3">Borsa</option>
                    <option value="4">Kripto</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Miktar*</label>
                <input type="number" class="form-control" id="gelirMiktar" required>
            </div>
            <button type="submit" class="btn btn-primary w-50" id="btnGelir">Ekle</button>
        </form>
        <h4 class="mt-4">Gelirler</h4>
        <table class="table table-striped table-sm mt-1 me-1">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Tür</th>
                    <th scope="col">Miktar</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Arsa</td>
                    <td>10,000,000₺</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Araba</td>
                    <td>10,000,000₺</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Ev</td>
                    <td>10,000,000₺</td>
                </tr>
            </tbody>
        </table>
    </div>


    <div class="container-fluid">
        <!--GİDER-->
        <form class="w-25">
            <h4>Gider Ekle</h4>
            <div class="mb-3">
                <label for="giderTür" class="form-label">Tür*</label>
                <select class="form-select" aria-label="Default select example" id="giderTur" required>
                    <option selected>Tür Seçiniz</option>
                    <option value="1">Kira</option>
                    <option value="2">Faturalar</option>
                    <option value="3">Ev Masrafları</option>
                    <option value="4">Eğlence</option>
                    <option value="5">Yatırım</option>
                    <option value="6">Ekstra Harcamalar</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Miktar*</label>
                <input type="number" class="form-control" id="giderMiktar" required>
            </div>
            <button type="submit" class="btn btn-primary w-50" id="btnGider">Ekle</button>
        </form>
        <h4 class="mt-4">Giderler</h4>
        <table class="table table-striped table-sm mt-1 ms-1">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Tür</th>
                    <th scope="col">Miktar</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Arsa</td>
                    <td>10,000,000₺</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Araba</td>
                    <td>10,000,000₺</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Ev</td>
                    <td>10,000,000₺</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>