@using KFTSEntityLayer.Concrete;
@model List<Rol>


@{
    ViewData["Header"] = "Profil";

}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Profil Başlığı -->
            <div class="profile-header text-center mb-4">
                <h3>Gökay Yener</h3>
                <p><strong>E-posta:</strong> gokay@example.com</p>
                <p><strong>Rol:</strong> @Model[0].RolAdi </p>
                <p><strong>Kayıt Tarihi:</strong> 01.08.2024</p>
            </div>

            <!-- Finansal Özet -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">📊 Finansal Özet</div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <h5>💰 Toplam Gelir</h5>
                            <p class="fs-5 text-success">25.000₺</p>
                        </div>
                        <div class="col-md-4">
                            <h5>💸 Toplam Gider</h5>
                            <p class="fs-5 text-danger">18.500₺</p>
                        </div>
                        <div class="col-md-4">
                            <h5>💼 Tasarruf</h5>
                            <p class="fs-5 text-info">6.500₺</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ayarlar -->
            <div class="card">
                <div class="card-header bg-secondary text-white">⚙️ Profil Ayarları</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a href="#">
                                🔄 Şifre Değiştir
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a href="#">
                                📝 Kişisel Bilgileri Güncelle
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a href="#">
                                🚪 Hesaptan Çıkış Yap
                            </a>
                        </li>
                        <li class="list-group-item text-danger">
                            <a href="#" class="text-danger">
                                ❌ Hesabı Sil
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>